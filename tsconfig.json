{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "WebWorker",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": [
      "node",
      "vite/client"
    ],
    "allowJs": true,
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "./test/fixtures/**/*.ts"
  ]
}